<div class="ui stackable menu">
<% if logged_in? %>
    <%= link_to "Home", root_path, class: "item" %>
    <%= link_to "マイページ", user_path(current_user), class: "item" %>
    <%= link_to "ユーザー一覧", users_path, class: "item" %>
    <%= link_to "成果物一覧", products_path, class: "item" %>
    <%= link_to "ログアウト", logout_path, method: :delete, class: "item" %>
    <p>ログインしているユーザー: <%= current_user.name %></p>
<% else %>
    <%= link_to "新規登録", sign_up_path, class: "item" %>
    <%= link_to "ログイン", login_path, class: "item" %>
<% end %>
</div>