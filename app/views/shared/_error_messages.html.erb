<% if object.errors.any? %>
  <div class="ui error message">
    <div class="header">
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul class="list">
      <% object.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>