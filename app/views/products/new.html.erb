<div class="ui container">
  <h3>成果物投稿</h3>
  <div class="ui large form error">
    <%= form_with model: @product, local: true do |f| %>
      <%= render 'shared/error_messages', object: @product %>
      <div class="field">
        <label>タイトル</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label>内容</label>
        <%= f.text_area :body %>
      </div>
      <%= f.submit '新規登録', class: "ui blue button" %>
    <% end %>
  </div>
</div>
