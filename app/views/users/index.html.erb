<div class="ui container">
  <h2>ユーザー一覧</h2>
  <table class="ui celled table">
    <thead>
      <tr>
        <th>ID</th>
        <th>名前</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td data-label="ID"><%= user.id %></td>
        <td data-label="名前"><%= link_to user.name, user_path(user) %></td>
        <td data-label="メールアドレス"><%= user.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>